{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"noImplicitAny": false,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"typeRoots": ["./node_modules/@types"]
	},
	"exclude": [
		"./node_modules"
	]
}